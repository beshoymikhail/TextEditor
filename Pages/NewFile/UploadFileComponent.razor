@inject Context context
<div class="btn-upload-file" id="@Id" onclick='UploadFile("@input_id")'>
    <div class="span-text-btn text-blue">
        Upload @fileName File
    </div>
    <div>

        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
            <path d="M1 10H19" stroke="#009DE0" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
            <path d="M10 19V1" stroke="#009DE0" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
        </svg>
    </div>
</div>
<InputFile id="@input_id" hidden OnChange="(HandleUploadFiles)" accept=".v" multiple required/>
<div class="uploaded-files-card overflow-y-auto">
    <div class="uploaded-files-card-title">
        <div>
            Upladed Files
        </div>
        <button class="btn-icon" @onclick="DeleteAllUploadedFile" type="button">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18" fill="none">
                <path d="M15.75 4.485C13.2525 4.2375 10.74 4.11 8.235 4.11C6.75 4.11 5.265 4.185 3.78 4.335L2.25 4.485" stroke="#E4433D" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                <path d="M6.375 3.7275L6.54 2.745C6.66 2.0325 6.75 1.5 8.0175 1.5H9.9825C11.25 1.5 11.3475 2.0625 11.46 2.7525L11.625 3.7275" stroke="#E4433D" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                <path d="M14.1375 6.855L13.65 14.4075C13.5675 15.585 13.5 16.5 11.4075 16.5H6.59255C4.50005 16.5 4.43255 15.585 4.35005 14.4075L3.86255 6.855" stroke="#E4433D" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                <path d="M7.74756 12.375H10.2451" stroke="#E4433D" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                <path d="M7.125 9.375H10.875" stroke="#E4433D" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
        </button>
    </div>
    <hr class="mt-0" />
    <div>
        @foreach (var item in context.uploaded_files[input_id])
        {
            <div class="files-card-item"> 
                <div class="text-break">
                    @item.Name
                </div>
                <button class="btn-icon" @onclick="@(()=>HandleDeleteSpecificFile(item))" type="button">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18" fill="none">
                        <path d="M15.75 4.485C13.2525 4.2375 10.74 4.11 8.235 4.11C6.75 4.11 5.265 4.185 3.78 4.335L2.25 4.485" stroke="#E4433D" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                        <path d="M6.375 3.7275L6.54 2.745C6.66 2.0325 6.75 1.5 8.0175 1.5H9.9825C11.25 1.5 11.3475 2.0625 11.46 2.7525L11.625 3.7275" stroke="#E4433D" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                        <path d="M14.1375 6.855L13.65 14.4075C13.5675 15.585 13.5 16.5 11.4075 16.5H6.59255C4.50005 16.5 4.43255 15.585 4.35005 14.4075L3.86255 6.855" stroke="#E4433D" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                        <path d="M7.74756 12.375H10.2451" stroke="#E4433D" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                        <path d="M7.125 9.375H10.875" stroke="#E4433D" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                </button>
            </div>
        }
    </div>
</div>
